generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER      // Regular users (learners, supporters)
  MEMBER    // Choir members (added by admin)
  ADMIN     // Full admin access
}

enum ProjectStatus {
  CURRENT
  PAST
  DRAFT
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentType {
  DONATION
  PURCHASE
  TICKET
  BOOKING
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  role          UserRole  @default(USER)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  donations     Donation[]
  purchases     Purchase[]
  payments      Payment[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String        @id @default(uuid())
  title       String
  description String        @db.Text
  image       String?
  goalAmount  Float
  currentAmount Float       @default(0)
  status      ProjectStatus @default(CURRENT)
  deadline    DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  donations   Donation[]
}

model Donation {
  id          String        @id @default(uuid())
  amount      Float
  currency    String        @default("XAF")
  donorName   String?
  donorEmail  String?
  message     String?
  anonymous   Boolean       @default(false)
  status      PaymentStatus @default(PENDING)
  projectId   String
  userId      String?
  createdAt   DateTime      @default(now())

  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user        User?         @relation(fields: [userId], references: [id])
  payment     Payment?
}

model Music {
  id          String    @id @default(uuid())
  title       String
  artist      String
  album       String?
  genre       String?
  duration    Int?      // in seconds
  price       Float
  currency    String    @default("XAF")
  coverImage  String?
  audioFile   String?
  previewFile String?
  sheetMusic  String?   // PDF URL
  isHymn      Boolean   @default(false)
  releaseDate DateTime?
  plays       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  purchases   Purchase[]
}

model Purchase {
  id          String        @id @default(uuid())
  amount      Float
  currency    String        @default("XAF")
  status      PaymentStatus @default(PENDING)
  musicId     String
  userId      String?
  guestEmail  String?
  downloadUrl String?
  downloadCount Int         @default(0)
  createdAt   DateTime      @default(now())

  music       Music         @relation(fields: [musicId], references: [id])
  user        User?         @relation(fields: [userId], references: [id])
  payment     Payment?
}

model Payment {
  id              String        @id @default(uuid())
  amount          Float
  currency        String        @default("XAF")
  type            PaymentType
  status          PaymentStatus @default(PENDING)
  paymentMethod   String?       // stripe, paypal, momo, orange
  transactionId   String?
  receiptUrl      String?
  userId          String?
  donationId      String?       @unique
  purchaseId      String?       @unique
  metadata        Json?
  createdAt       DateTime      @default(now())

  user            User?         @relation(fields: [userId], references: [id])
  donation        Donation?     @relation(fields: [donationId], references: [id])
  purchase        Purchase?     @relation(fields: [purchaseId], references: [id])
}

model News {
  id          String    @id @default(uuid())
  title       String
  content     String    @db.Text
  excerpt     String?
  image       String?
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Event {
  id          String    @id @default(uuid())
  title       String
  description String    @db.Text
  image       String?
  venue       String?
  address     String?
  eventDate   DateTime
  endDate     DateTime?
  ticketPrice Float?
  currency    String    @default("XAF")
  capacity    Int?
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  tickets     Ticket[]
}

model Ticket {
  id          String        @id @default(uuid())
  eventId     String
  buyerName   String
  buyerEmail  String
  quantity    Int           @default(1)
  totalAmount Float
  currency    String        @default("XAF")
  status      PaymentStatus @default(PENDING)
  ticketCode  String        @unique
  createdAt   DateTime      @default(now())

  event       Event         @relation(fields: [eventId], references: [id])
}

model ChoirBooking {
  id            String    @id @default(uuid())
  clientName    String
  clientEmail   String
  clientPhone   String?
  eventType     String
  eventDate     DateTime
  venue         String?
  details       String?   @db.Text
  status        String    @default("pending") // pending, confirmed, completed, cancelled
  quotedAmount  Float?
  currency      String    @default("XAF")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Site Settings for admin-editable values
model SiteSettings {
  id            String   @id @default("site-settings")
  memberCount   Int      @default(50)
  studentsCount Int      @default(100)
  programsCount Int      @default(6)
  yearsActive   Int      @default(8)
  albumDescription String? @db.Text
  updatedAt     DateTime @updatedAt
}

// Activity/Event model
model Activity {
  id            String   @id @default(uuid())
  title         String
  description   String   @db.Text
  fullDescription String? @db.Text
  type          String   // concert, workshop, outreach, meeting
  date          DateTime
  venue         String?
  coverImage    String?
  images        Json?    // Array of image URLs
  videos        Json?    // Array of video URLs
  status        String   @default("upcoming") // upcoming, past
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Album model for music organization
model Album {
  id            String   @id @default(uuid())
  name          String
  artist        String   @default("G2 Melody")
  description   String?  @db.Text
  coverImage    String?
  releaseDate   DateTime?
  totalTracks   Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Founder model for About Us page
model Founder {
  id            String   @id @default(uuid())
  name          String
  role          String?  // e.g., "Co-Founder", "Visionary"
  bio           String?  @db.Text
  image         String?
  order         Int      @default(0)  // For sorting
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Choir Member model for Members Since 2016 section
enum MemberStatus {
  ACTIVE
  ALUMNI
  THEOSORTIAN
  SPONSOR
}

enum VocalPart {
  SOPRANO
  ALTO
  TENOR
  BASS
  NONE
}

model ChoirMember {
  id            String       @id @default(uuid())
  name          String
  image         String?
  vocalPart     VocalPart    @default(NONE)
  yearJoined    Int?
  status        MemberStatus @default(ACTIVE)
  role          String?      // e.g., "Conductor", "Secretary"
  isFounding    Boolean      @default(false)
  order         Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

// History Timeline model for About Us page
model HistoryEvent {
  id            String   @id @default(uuid())
  year          String   // e.g., "Late 2016", "October 2016", "2017"
  title         String
  description   String   @db.Text
  order         Int      @default(0)
  colorVariant  String   @default("amber") // amber, orange, rose
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ==================== LEARNING PLATFORM MODELS ====================

// Course model for Learn Muzik
model Course {
  id            String   @id @default(uuid())
  title         String
  description   String?  @db.Text
  image         String?
  emoji         String?  @default("ðŸŽµ")
  duration      String?  // e.g., "12 weeks"
  level         String   @default("Beginner") // Beginner, Intermediate, Advanced
  totalLessons  Int      @default(0)
  isPublished   Boolean  @default(true)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  lessons       Lesson[]
  enrollments   Enrollment[]
}

// Lesson model
model Lesson {
  id            String   @id @default(uuid())
  courseId      String
  title         String
  description   String?  @db.Text
  content       String?  @db.Text
  videoUrl      String?
  audioUrl      String?
  duration      Int?     // in minutes
  order         Int      @default(0)
  isPublished   Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  course        Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  progress      LessonProgress[]
}

// User enrollment in courses
model Enrollment {
  id            String   @id @default(uuid())
  userId        String
  courseId      String
  progress      Int      @default(0) // percentage 0-100
  completedLessons Int   @default(0)
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  lastAccessedAt DateTime @default(now())

  course        Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
}

// Individual lesson progress
model LessonProgress {
  id            String   @id @default(uuid())
  userId        String
  lessonId      String
  completed     Boolean  @default(false)
  watchTime     Int      @default(0) // in seconds
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  lesson        Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

// Practice tracks for users
model PracticeTrack {
  id            String   @id @default(uuid())
  title         String
  description   String?
  audioUrl      String?
  duration      String?  // e.g., "5:30"
  type          String   @default("Exercise") // Exercise, Song, Warm-up
  vocalPart     VocalPart @default(NONE) // For part-specific tracks
  difficulty    String   @default("Beginner")
  isPublished   Boolean  @default(true)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// User practice sessions
model PracticeSession {
  id            String   @id @default(uuid())
  userId        String
  trackId       String?
  duration      Int      // in minutes
  date          DateTime @default(now())
  notes         String?

  @@index([userId])
}

// User achievements/badges
model Achievement {
  id            String   @id @default(uuid())
  name          String
  description   String?
  icon          String?  // emoji or icon name
  type          String   @default("milestone") // milestone, streak, course, special
  requirement   String?  // JSON string for conditions
  createdAt     DateTime @default(now())

  userAchievements UserAchievement[]
}

// User earned achievements
model UserAchievement {
  id            String   @id @default(uuid())
  userId        String
  achievementId String
  earnedAt      DateTime @default(now())

  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}

// User notifications
model Notification {
  id            String   @id @default(uuid())
  userId        String
  title         String
  message       String
  type          String   @default("info") // info, reminder, achievement, announcement
  isRead        Boolean  @default(false)
  link          String?
  createdAt     DateTime @default(now())

  @@index([userId])
}

// Scheduled events for users (rehearsals, deadlines, etc.)
model ScheduleItem {
  id            String   @id @default(uuid())
  title         String
  description   String?
  date          DateTime
  time          String?
  type          String   @default("event") // rehearsal, lesson, deadline, event
  isPublic      Boolean  @default(true)
  userId        String?  // null for public events
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}

// User learning stats/streaks
model UserStats {
  id              String   @id @default(uuid())
  userId          String   @unique
  currentStreak   Int      @default(0)
  longestStreak   Int      @default(0)
  totalPracticeMinutes Int @default(0)
  totalLessonsCompleted Int @default(0)
  lastPracticeDate DateTime?
  vocalPart       VocalPart @default(NONE)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// News and Events
model NewsEvent {
  id            String   @id @default(uuid())
  title         String
  slug          String   @unique
  summary       String?
  content       String?  // Rich text/HTML content
  image         String?
  type          String   @default("news") // news, event, announcement
  eventDate     DateTime? // For events
  eventTime     String?   // e.g., "6:00 PM"
  eventLocation String?   // For events
  isFeatured    Boolean  @default(false)
  isPublished   Boolean  @default(false)
  publishedAt   DateTime?
  author        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([type, isPublished])
  @@index([publishedAt])
}

// Password Reset Tokens
model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

